{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "functions": [],
    "parameters": {
        "storageAccountName": {
            "type":"string",
            "defaultValue": "storage1",
            "minLength": 3,
            "maxLength": 24,
            "metadata": {
                "description": "This is the name of the storage account."
            }
        },
        "webAppName": {
            "type":"string",
            "defaultValue": "webApp1",
            "minLength": 3,
            "maxLength": 50,
            "metadata": {
                "description": "This is the name of the web application."
            }
        },
        "servicePlanName": {
            "type":"string",
            "defaultValue": "freeServicePlan",
            "minLength": 3,
            "maxLength": 50,
            "metadata": {
                "description": "This is the name of the serviceplan."
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[parameters('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "tags": {
                "displayName": "Storage Account - Lab 1"
            },
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            }
        },
        {
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "name": "[parameters('webAppName')]",
                "siteConfig": {
                    "appSettings": [],
                    "linuxFxVersion": "NODE|lts",
                    "alwaysOn": false
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlanName'))]",
                "clientAffinityEnabled": false,
                "httpsOnly": true
            },
            "resources":[
                {
                    "type": "sourcecontrols",
                    "apiVersion": "2020-12-01",
                    "name": "sourceControl",
                    "location": "[resourceGroup().location]",
                    "dependsOn":[
                        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
                    ],
                    "properties":{
                        "repoUrl": "https://github.com/Light2027/Node.JS_HelloWorld_Azure_CI.git",
                        "branch": "main",
                        "isManualIntegration" : false
                    }
                }
            ]
        },
        {
            "name": "[parameters('servicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "kind": "linux",
            "sku": {
                "name": "F1",
                "tier": "Free",
                "capacity": 1
            },
            "properties": {
                "name": "[parameters('servicePlanName')]",
                "targetWorkerCount":1,
                "targetWorkerSizeId":0,
                "reserved": true
            }
        }
    ],
    "outputs": {}
}